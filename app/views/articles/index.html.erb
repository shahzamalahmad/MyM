<div class="container-fluid-centre">
	<div class="row" style="overflow:scroll; height:750px;">
		<div class="col-2">
			<div class="container-fluid">
				<div class="bg-success p-2 text-white bg-opacity-75">
			    	<h1><%= link_to "MyM", root_path, class:"nav-link" %></h1>
				</div>
		    	<br>
			    <ul class="navbar-nav me-auto mb-2 mb-lg-0" style="margin-left: 30px;">
			    <br>
			        <li class="nav nav-pills flex-column">
			          <%= link_to "HOME", root_path, class:"nav-link" %>
			        </li>
			        <li class="nav nav-pills flex-column">
				        <% if user_signed_in? %>
				        	<%# if @articles.user.admin == mutawalli %>
				          		<%= link_to "ADD MOSQUE", new_article_path, class:"nav-link" %>
				        	<%# end %>
				        <% end %>
			        </li>
			        <li class="nav nav-pills flex-column">
				        <% if user_signed_in? %>
   							 <%= link_to 'EDIT PROFILE', edit_user_registration_path, class:"nav-link" %>
   							 <%= button_to "SIGN OUT", destroy_user_session_path, :method => :delete, class:"nav-link" %>
   						<% else %>
				        	<%= link_to "SIGN UP", articles_login_path, class:"nav-link" %>
								<%= link_to "SIGN IN", articles_login_path, class:"nav-link" %>
				        <% end %>
			        </li>
			        <li class="nav nav-pills flex-column">
			          <%= link_to "ABOUT", articles_about_path, class:"nav-link" %>
			        </li>
			    </ul>
			</div>
		</div>
<!-- All mosque		 -->
		<div class="col-3" style="text-align: center; background-color: ;">
			<div class="bg-success p-2 text-white bg-opacity-75">
				<h1><%= "All Mosque" %></h1>
			</div>
				<br>
			<div class="container-fluid">
				<% @articles.each do |article| %>
					<div class="border border-primary" style="border-radius: 20%; background-color: lightgreen;">
	   				   <div class="row">
		   				    <h5><%= link_to article.mosque_name, article, class:"nav-link" %></h5>
	   				   </div>
	   				   <div class="row">
	    					<%= link_to article.address, article, class:"nav-link" %>
	   				   </div>
					</div>
					<br>
				<% end %>				
			</div>
		</div>
<!-- Mosque data -->
		<div class="col" style="text-align: center; background-color: ;">
			<div class="bg-success p-2 text-white bg-opacity-75">
				<h1><%= "Mosque without Imam" %></h1>
			</div>
				<br>
			<div class="container-fluid">
				<% @articles.each do |article| %>
					<% if article.imam_name == "" %>
						<div class="border border-primary" style="border-radius: 20%; background-color: lightgreen;">

		   				   <div class="row">
			   				    <h5><%= link_to article.mosque_name, article, class:"nav-link" %></h5>
		   				   </div>
		   				   <div class="row">
		    					<%= link_to article.address, article, class:"nav-link" %>
		   				   </div>
		   				   <br>
		   				</div>
		   				<br>
	   				<% end %>
				<% end %>				
			</div>
		</div>

 <!-- other details -->
		<div class="col" style="text-align: center; background-color: ;">
			<div class="bg-success p-2 text-white bg-opacity-75">
				<h1><%= "All Imam" %></h1>
			</div>
			<br>
			<div class="container-fluid">
				<% @user.each do |user| %>
		   			<% if user.role == "imam" %>
						<div class="border border-primary" style="border-radius: 20%; background-color: lightgreen;">
		   				    <div class="row">
			   				    <h5><%= link_to user.first_name.to_s + " " + user.last_name.to_s, user, class:"nav-link" %></h5>
			   				    <h5><%= link_to user.email, user, class:"nav-link" %></h5>
		   				    </div>
						</div>
			   		<% end %>
					<br>
				<% end %>
			</div>
		</div>
		
	</div>
</div>