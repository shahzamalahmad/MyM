<h3 style="text-align: center;">Add a mosque</h3>

<%= form_with model: @article do |form| %>
  <div>
    <%= form.text_field :mosque_name, placeholder:"Mosque name" %>
  </div>

  <div>
    <%= form.text_field :address , placeholder:"Address of mosque" %>
  </div>
  <div>
    <%= form.number_field :mobile_no , placeholder:"Contact number", style:"max: 10;" %>
  </div>
  <div>
    <%= form.text_field :mutawalli_name , placeholder:"Name of Mutawalli/Zimmedar" %>
  </div>
  <div>
    <%= form.text_field :imam_name , value:"", type:"hidden" %>
  </div>
  <div>
    <%= form.number_field :user_id , value:current_user.id, type:"hidden" %>
  </div>
  

  <div>
    <%= form.submit "Create Mosque" %>
  </div>
<% end %>